<div class="container">
  <div class="row">
    <div class="span12">
      <h1><%= @character.full_name %></h1>
      <%= form_for @character do |f| %>

        <%= f.label :first_name, "First Name" %>
        <%= f.text_field :first_name %>

        <%= f.label :last_name, "Last Name" %>
        <%= f.text_field :last_name %>

        <%= f.label :experience, "Experience" %>
        <%= f.text_field :experience %>

        <%= f.label :hp, "HP" %>
        <%= f.text_field :hp %>

        <%= f.label :gold, "Gold" %>
        <%= f.text_field :gold %>

        <%= f.label :height, "Height" %>
        <%= f.text_field :height %>

        <%= f.label :weight, "Weight" %>
        <%= f.text_field :weight %>

        <%= f.label :strength, "Strength" %>
        <%= f.text_field :strength %>

        <%= f.label :intelligence, "Intelligence" %>
        <%= f.text_field :intelligence %>

        <%= f.label :luck, "Luck" %>
        <%= f.text_field :luck %>

        <%= f.label :sex_appeal, "Sex Appeal" %>
        <%= f.text_field :sex_appeal %>

        <br><br>

        <%= f.submit "Edit Character", :class => "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
