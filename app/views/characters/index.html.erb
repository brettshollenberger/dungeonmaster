<div class="container">

  <h1>Characters</h1>

  <% if @notice %>
    <div class="row notice">
      <div class="span12">
        <p><%= @notice %></p>
      </div>
    </div>
  <% end %>

  <% unless @characters.empty? %>
    <div class="row">
      <div class="span12">
        <table class="table table-hover">
          <thead>
            <th>Name</th>
            <th>Class</th>
            <th>Level</th>
            <th>Experience</th>
            <th>Owner</th>
            <th>Actions</th>
          </thead>
          <tbody>
            <% @characters.each do |character| %>
              <tr>
                <td><%= link_to "#{character.full_name}", character_path(character) %></td>
                <td><%= character.charclass %></td>
                <td><%= character.level %></td>
                <td><%= character.experience %></td>
                <td><%= character.user.username %></td>
                <td><%= link_to "Edit", edit_character_path(character) %></td>
                <td><%= link_to "Banish", character_path(character), method: :delete %></td>
              </tr>
            <% end %>
        </tbody>
      </div>
    </div>
  <% end %>

  <%= link_to "Create Character", new_character_path, :class => "btn btn-primary" %>

</div>
